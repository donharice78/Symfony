{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">User Details</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Pseudo</th>
                            <td>{{ user.pseudo }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Password</th>
                            <td>{{ user.password|slice(0, 8) ~ '...' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
