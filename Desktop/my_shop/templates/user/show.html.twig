{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="p-6 max-w-lg mx-auto bg-white shadow-md rounded-lg">
        <h1 class="text-3xl font-bold mb-6">User Details</h1>

        <table class="min-w-full divide-y divide-gray-200">
            <tbody>
                <tr class="border-b border-gray-200">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Id</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.id }}</td>
                </tr>
                <tr class="border-b border-gray-200">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Email</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.email }}</td>
                </tr>
                <tr class="border-b border-gray-200">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Roles</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                </tr>
                <tr class="border-b border-gray-200">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Password</th>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-6">
            <a href="{{ path('app_user_index') }}" class="text-blue-500 hover:text-blue-700">Back to list</a>
        </div>

        <div class="mt-6">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
