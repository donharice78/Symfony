{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-md rounded">
    <h1 class="text-2xl font-semibold mb-6">Register</h1>

    {{ form_errors(registrationForm) }}
    
    {{ form_start(registrationForm) }}
    
        <div class="mb-4">
            {{ form_label(registrationForm.email, null, { 'attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'mt-1 p-2 w-full border border-gray-300 rounded' } }) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Password', { 'attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
            {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'mt-1 p-2 w-full border border-gray-300 rounded' } }) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-4">
            {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' } }) }}
            {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', { 'attr': { 'class': 'ml-2 block text-sm text-gray-900' } }) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Register
        </button>
    
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
