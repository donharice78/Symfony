{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 mt-6">
        <h2 class="text-xl font-semibold mb-2">{{ product.title }}</h2>

        <div class="max-w-3xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
            <div class="flex">
                <div class="w-1/3 p-4">
                    {% if product.photo %}
                        <img src="{{ product.photo }}" alt="{{ product.title }}" class="w-full h-48 object-cover rounded-lg">
                    {% else %}
                        <img src="https://via.placeholder.com/300" alt="No image" class="w-full h-48 object-cover rounded-lg">
                    {% endif %}
                </div>
                <div class="w-2/3 p-4">
                    
                    
                    <ul class="list-disc list-inside mb-4">
                        <li><strong class="font-semibold">Colour:</strong> {{ product.colour }}</li>
                        <li><strong class="font-semibold">Collection:</strong> {{ product.collection }}</li>
                        <li><strong class="font-semibold">Price:</strong> ${{ product.price }}</li>
                        <li><strong class="font-semibold">Stock:</strong> {{ product.stock }}</li>
                        <li><strong class="font-semibold">Created At:</strong> {{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</li>
                    </ul>
                    <p class="text-gray-700 mb-4">{{ product.description }}</p>
                    <div class="flex space-x-4">
                        <a href="{{ path('app_product_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Back to list</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600">Edit</a>
                       <a href="{{ path('app_product_delete', {'id': product.id}) }}" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
