
{% block body %}
<div class="w-3/5 m-auto pt-20">
    {{ form_start(form, { 'attr': {'class': 'space-y-4'} }) }}
        <div class="bg-white p-6 rounded-lg shadow-md space-y-4">
            {% for field in form %}
                <div>
                    {{ form_label(field) }}
                    {{ form_widget(field, { 'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:bg-white focus:border-blue-500 focus:outline-none'} }) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}
            <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                {{ button_label|default('Save') }}
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
